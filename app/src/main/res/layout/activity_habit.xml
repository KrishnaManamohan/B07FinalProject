<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/HabitPageConstraint"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <AutoCompleteTextView
        android:id="@+id/dropdownMenu"
        android:layout_width="378dp"
        android:layout_height="56dp"
        android:layout_marginTop="32dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:hint="Search here"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/habitHeader"
        android:layout_width="382dp"
        android:layout_height="29dp"
        android:layout_marginTop="132dp"
        android:text="Habits - Add Upto 3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAddHabit" />

    <Button
        android:id="@+id/btnAddHabit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Habit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout6" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout6"
        android:layout_width="373dp"
        android:layout_height="53dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dropdownMenu">

        <Button
            android:id="@+id/btnFilter1"
            android:layout_width="87dp"
            android:layout_height="53dp"
            android:text="Filter 1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnFilter2"
            android:layout_width="92dp"
            android:layout_height="47dp"
            android:text="Filter 2"
            app:layout_constraintStart_toEndOf="@+id/btnFilter1"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnFilter3"
            android:layout_width="106dp"
            android:layout_height="46dp"
            android:layout_marginEnd="4dp"
            android:text="Filter 3"
            app:layout_constraintEnd_toStartOf="@+id/btnShowAll"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnShowAll"
            android:layout_width="91dp"
            android:layout_height="56dp"
            android:text="Show All"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout7"
        android:layout_width="386dp"
        android:layout_height="284dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/habitHeader">

        <TextView
            android:id="@+id/habitField3"
            android:layout_width="131dp"
            android:layout_height="109dp"
            android:text="Habit3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/habitField2" />

        <TextView
            android:id="@+id/habitField2"
            android:layout_width="134dp"
            android:layout_height="97dp"
            android:text="Habit2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/habitField1" />

        <TextView
            android:id="@+id/habitField1"
            android:layout_width="134dp"
            android:layout_height="78dp"
            android:text="Habit1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/standingField1"
            android:layout_width="93dp"
            android:layout_height="78dp"
            android:text="Standing1"
            app:layout_constraintStart_toEndOf="@+id/habitField1"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/standingField2"
            android:layout_width="89dp"
            android:layout_height="96dp"
            android:text="Standing2"
            app:layout_constraintStart_toEndOf="@+id/habitField2"
            app:layout_constraintTop_toBottomOf="@+id/standingField1" />

        <TextView
            android:id="@+id/standingField3"
            android:layout_width="94dp"
            android:layout_height="110dp"
            android:text="standing 3"
            app:layout_constraintStart_toEndOf="@+id/habitField3"
            app:layout_constraintTop_toBottomOf="@+id/standingField2" />

        <Button
            android:id="@+id/deleteHabit1"
            android:layout_width="118dp"
            android:layout_height="48dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="28dp"
            android:text="delete"
            app:layout_constraintStart_toEndOf="@+id/standingField1"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/deleteHabit2"
            android:layout_width="116dp"
            android:layout_height="44dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="44dp"
            android:text="delete"
            app:layout_constraintStart_toEndOf="@+id/standingField2"
            app:layout_constraintTop_toBottomOf="@+id/deleteHabit1" />

        <Button
            android:id="@+id/deleteHabit3"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="52dp"
            android:text="delete"
            app:layout_constraintStart_toEndOf="@+id/standingField3"
            app:layout_constraintTop_toBottomOf="@+id/deleteHabit2" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/backButtonHabit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout7" />

</androidx.constraintlayout.widget.ConstraintLayout>
